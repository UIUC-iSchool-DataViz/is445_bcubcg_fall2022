settings.outformat = "svg";
import is590lib;

unitsize(0.5cm);
srand(123456);

// Mushroom from https://gsclchood.wikispaces.com/Coordinate+Pictures
// licensed CC-3.0-BY-SA

int ncircles = 32;
pair[][] points = { 
  // Head
  // x bounds are -12.5 .. 13.5
  {(8.5,-9), (10,-8), (11.5,-7), (12.5,-5.5), (13,-4), (13.5,-2), (13.5,0),
   (13,2), (12.5,4), (11,6.5), (10,8), (9,9), (7,10.5), (5,11.5), (3,12),
   (1,12.5), (0,12.5), (-2,12), (-4,11.5), (-6,10.5), (-8,9), (-9,8),
   (-10.5,6.5), (-11.5,5), (-12,3), (-12.5,0), (-12.5,-1), (-12.5,-4),
   (-12,-5), (-11,-6.5), (-9.5,-8), (-7.5,-8.5)},
  // stem
  {(0,-4.5), (1,-4.5), (3,-5), (6,-6), (8,-7), (8.5,-9), (8,-11), (7,-12),
   (5.5,-13), (3,-13.5), (0,-13.5), (-2,-13.5), (-5,-13), (-6,-12.5), (-7,-11),
   (-7.5,-10), (-7.5,-8.5), (-7.5,-8), (-7,-7), (-6,-6), (-3,-5), (0,-4.5)},
  // left spot
  {(-12.5,-4), (-11,-2), (-10.5,-.5), (-10,2), (-10,5), (-10.5,6.5),
   (-11.5, 5), (-12, 3), (-12.5, 0), (-12.5, -1), (-12.5, -4)},
  // right spot
  {(11,6.5), (10.5,4), (10.5,2), (11,0), (12,-2), (13,-4), 
    (13.5,-2), (13.5,0), (13,2), (12.5, 4), (11, 6.5)},
  // middle spot
  {(1,-1), (-1,-1), (-3,0), (-5,2), (-6,4), (-6,6), (-5.5,8), (-4,10), (-2,11),
   (.5,11.5), (3,11), (5,10), (6.5,8), (7,6), (7,4), (6,2), (4,0), (1,-1)},
  // eyes -- y bounds are -10.5 .. -6
  {(-2.5,-6), (-1.5,-7), (-1.5,-9.5), (-2.5,-10.5), (-3.5,-9.5), (-3.5,-7),
   (-2.5,-6)},
  {(3,-6), (2,-7), (2,-9.5), (3,-10.5), (4,-9.5), (4,-7), (3,-6)}
};

pen[] colors = {
  red, paleyellow, white, white, white, black, black
};

for (int i = 0; i < points.length; ++i) {
  guide g;
  for (int j = 0; j < points[i].length; ++j) {
    g = g--points[i][j];
  }
  path p = g -- cycle;
  filldraw(p, linewidth(2.0), fillpen=colors[i]);
}

shipout("mushroom.svg");

erase();
for (int i = 0; i < points.length; ++i) {
  guide g;
  for (int j = 0; j < points[i].length; ++j) {
    g = g--points[i][j];
  }
  path p = g -- cycle;
  dot(p, black);
}

shipout("mushroom_dots.svg");
